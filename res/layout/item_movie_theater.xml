<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="10dp">

        <TextView
                android:id="@+id/cinemaitem_tvCinemaName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="影院名字"
                android:textColor="#000000"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/cinemaitem_tvTicketPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="18.9"
                android:textColor="#FF0000"
                android:textSize="16sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元起"
                android:textColor="#777777"
                android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/cinemaitem_tvCinemaAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="武侯区二环路南四段紫荆北路11号"
                android:textColor="#777777"
                android:textSize="14.5sp"/>

        <TextView
                android:id="@+id/cinemaitem_tvCinemaDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="18.9"
                android:textColor="#777777"
                android:textSize="14.5sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="km"
                android:textColor="#777777"
                android:textSize="14.5sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <TextView
                android:id="@+id/itemCinema_tvIMAX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_cinema_bg"
                android:visibility="gone"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textSize="10sp"
                android:layout_marginRight="2dp"
                android:text="IMAX"
                android:textColor="#579DAF"/>

        <TextView
                android:id="@+id/itemCinema_tvSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_cinema_bg"
                android:visibility="gone"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textSize="10sp"
                android:layout_marginRight="2dp"
                android:text="座"
                android:textColor="#579DAF"/>

        <TextView
                android:id="@+id/itemCinema_tvDeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_cinema_bg"
                android:visibility="gone"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textSize="10sp"
                android:layout_marginRight="2dp"
                android:text="团"
                android:textColor="#579DAF"/>

        <TextView
                android:id="@+id/itemCinema_tvPark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_cinema_bg"
                android:visibility="gone"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textSize="10sp"
                android:layout_marginRight="2dp"
                android:text="停车场"
                android:textColor="#579DAF"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近期场次"
                android:textSize="14.5sp"
                android:textColor="@color/gray"
                android:layout_marginRight="5dp"
                />
            <TextView
                    android:id="@+id/tvNearNearbySession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textSize="14.5sp"
                    android:textColor="@color/gray"/>
    </LinearLayout>

</LinearLayout>