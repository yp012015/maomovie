<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/layDate"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:10"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="20:30散场"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英语3D"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/hall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="5号厅"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tvPiece"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/color_text_selected"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="55元"
                />


        <Button
                android:id="@+id/btn_BuyTicket"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:padding="5dp"
                android:text="选座订票"
                android:background="@drawable/btn_buyticket_bg"
                android:textColor="@color/color_buyticketbtn"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/layDate"
            android:background="@color/gray"
            />

</RelativeLayout>