<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_movie_lay"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/movie_name_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="5dp">

        <ImageView
                android:id="@+id/moviePhoto"
                android:layout_width="45dp"
                android:layout_height="70dp"
                android:src="@drawable/cartoon_list_item_default"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:text="火星救援"
                        android:textColor="#000000"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tvSc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF9A01"
                        android:textSize="18sp"
                        android:text="8.9"/>
                <TextView
                        android:id="@+id/icMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF9A01"
                        android:textSize="12sp"
                        android:text="分"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:id="@+id/tvRt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="今天99家影院放映1293场"
                        android:textColor="#444444"
                        android:textSize="12.0sp"/>

                <Button
                        android:id="@+id/btn_BuyTicket"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_buyticket_bg"
                        android:textColor="@color/color_buyticketbtn"
                        android:text="购票"
                        android:textSize="12sp"
                        />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_below="@id/movie_name_lay"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/hologray"/>
</LinearLayout>
